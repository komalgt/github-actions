name: Example Secret Usage

on: [push]

jobs:
  show-secret:
    runs-on: ubuntu-latest
    steps:
      - name: Print the secret (never do this in real scenarios)
        run: echo ${{ secrets.MY_SECRET }}

      - name: Use secret in script (best practice: don't print it)
        run: |
          # Use secret in app logic, not in logs
          curl -H "Authorization: Bearer ${{ secrets.MY_SECRET }}" https://example.com/api
